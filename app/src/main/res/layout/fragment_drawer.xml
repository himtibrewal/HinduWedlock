<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        android:background="@color/drawer_list"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_interest_received"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/circle_strok_white_hollow"
                    android:scaleType="centerInside"
                    android:src="@drawable/interest_white" />

                <TextView
                    android:id="@+id/tv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_interest"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Interests Received"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_accceptance_drawer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_interest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/circle_strok_white_hollow"
                    android:scaleType="centerInside"
                    android:src="@drawable/acceptance_white" />

                <TextView
                    android:id="@+id/tv_interest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_interest1"
                    android:layout_centerHorizontal="true"
                    android:text="All Acceptance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_just_joined_drawer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_interest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/circle_strok_white_hollow"
                    android:scaleType="centerInside"
                    android:src="@drawable/joined_white" />

                <TextView
                    android:id="@+id/tv_interest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_interest2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Just joined Matches"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:id="@+id/drawer_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_menu_camera"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/profile_pic"
                android:text="Me (ZE44444)"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/profile_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/profile_pic"
                android:text="Tap to Edit Profile"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/drawer_home"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_search"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_search_by_id"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Search by Profile ID"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_saved_searches"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Saved Searches"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="My Matches"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_just_joined_mathces"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Just Joined Matches"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_matches_verified_visit"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Matches Verified by Visit"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_desired_partner_match"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Desired Partner Matches"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_daily_recommendation"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Daily Recommendation"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_kundli_match"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Kundli Matches"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_member_looking_for_me"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Member Looking for Me"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_profile_visitors"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Profile Visitors"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="My Contacts"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_interest_received"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Interests Received"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_filter_interest"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Filtered Interests"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_all_acceptance"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="All Acceptance"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_phonebook"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Phonebook"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_who_viewed_my_contact"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Who Viewed My Contacts"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_shortlist_profile"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="shortlisted Profiles"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_messgae"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Messages"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_interest_sent"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Interest Sent"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_Blocked"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Block/Ignored"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_declined_member"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Declined Members"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="More"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_help"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_setting"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_contact_us"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_about_us"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/drawer_rate_the_app"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/drawable_drawer_item_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Rate The Application"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

</ScrollView>