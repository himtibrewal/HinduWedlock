<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_music_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Favourite Music"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_book_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Favourite Book"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_dress_style_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Dress Style"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_sports_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Sports"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_cuisine_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Cuisine"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_movies_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Movies"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_read_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Favourite Read"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_tv_shows_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="TV Shows"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_vacation_destination_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Vacation Destination"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


    </LinearLayout>
</ScrollView>

