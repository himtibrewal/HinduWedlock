<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_religion_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Religion"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_mother_tongue_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Mother Tongue"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_caste_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Caste"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_subcaste_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Subcaste"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_gotra_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Gotra"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_family_based_ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Family Based out of"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />
    </LinearLayout>
</ScrollView>

