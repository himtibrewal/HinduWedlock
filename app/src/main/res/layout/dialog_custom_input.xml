<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateAlwaysVisible">

    <LinearLayout
        android:id="@+id/ll_input_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_input_input_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_bottom_selection"
            android:clickable="true"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_input_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_above="@+id/ll_input_input_dialog"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:gravity="center"
        android:hint="hint"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/line"
        style="@style/LinearLayout_Spinner"
        android:layout_above="@id/et_input_input_dialog"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_title_input_dialog"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_above="@+id/line"
        android:background="@color/white"
        android:gravity="center"
        android:text="Enter"
        android:textColor="@color/red_dark"
        android:textSize="@dimen/_18sdp" />

    <ImageView
        android:id="@+id/iv_close_input_dialog"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/circle_bg_red_solid"
        android:elevation="@dimen/_4sdp"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ignore_white" />
</RelativeLayout>