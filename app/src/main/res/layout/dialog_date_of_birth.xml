<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="match_parent"
    android:gravity="right">

    <LinearLayout
        android:id="@+id/ll_done_dob_dialog"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_done_dob_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_bottom_selection"
            android:clickable="true"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dob_text"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:padding="@dimen/_3sdp"
        android:text="Date of birth"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ll_part_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dob_text"
        android:background="@color/dob_header"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv__day_dob_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:text="Day"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_month_dob_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:text="Month"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_year_dob_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:text="Year"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_done_dob_dialog"
        android:layout_below="@+id/ll_part_text"
        android:orientation="horizontal"
        android:weightSum="3">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_day_dob_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_month_dob_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_year_dob_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

    </LinearLayout>
</RelativeLayout>


