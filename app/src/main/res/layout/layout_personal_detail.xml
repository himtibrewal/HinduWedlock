<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp">

        <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_gender_personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_female_personal_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_ractagle_hollow_pinkline">

                    <!--<ImageView-->
                    <!--android:id="@+id/iv_female_personal_detail"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="@dimen/_30sdp"-->
                    <!--android:padding="@dimen/_10sdp"-->
                    <!--android:src="@drawable/ic_menu_camera" />-->

                    <TextView
                        android:id="@+id/tv_female_personal_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/female_grey"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="Female" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_male_personal_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_ractagle_hollow_pinkline">

                    <!--<ImageView-->
                    <!--android:id="@+id/iv_male_personal_detail"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="@dimen/_30sdp"-->
                    <!--android:padding="@dimen/_10sdp"-->
                    <!--android:src="@drawable/ic_menu_camera" />-->

                    <TextView
                        android:id="@+id/tv_male_personal_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/male_grey"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="Male" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_black" />

            <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
                android:id="@+id/layout_date_of_birth_personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:heading="@string/date_of_birth"
                custom:value="@string/not_filled" />

            <LinearLayout style="@style/LinearLayout_Spinner" />

            <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
                android:id="@+id/layout_height_personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:heading="@string/height"
                custom:value="@string/not_filled" />

            <LinearLayout style="@style/LinearLayout_Spinner" />

            <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
                android:id="@+id/layout_country_personal_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:heading="@string/country"
                custom:value="@string/not_filled" />

            <LinearLayout style="@style/LinearLayout_Spinner" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_next_personal_detail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_next_personal_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_bottom_selection"
            android:clickable="true"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>