<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_family_status_edit_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Family status"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_family_values_edit_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Family Values"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_family_type_edit_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Family Type"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_living_with_parents_edit_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Live with parents?"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />
    </LinearLayout>
</ScrollView>

