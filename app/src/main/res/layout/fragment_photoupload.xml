<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_dark"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_8sdp"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rl_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="6dp"
                android:background="@drawable/circle_strok_white_hollow"
                android:scaleType="centerInside"
                android:src="@drawable/interest_white" />

            <TextView
                android:id="@+id/tv_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item1"
                android:layout_centerHorizontal="true"
                android:text="Gallery"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="6dp"
                android:background="@drawable/circle_strok_white_hollow"
                android:scaleType="centerInside"
                android:src="@drawable/interest_white" />

            <TextView
                android:id="@+id/tv_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item2"
                android:layout_centerHorizontal="true"
                android:text="Camera"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="6dp"
                android:background="@drawable/circle_strok_white_hollow"
                android:scaleType="centerInside"
                android:src="@drawable/interest_white" />

            <TextView
                android:id="@+id/tv_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item3"
                android:layout_centerHorizontal="true"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_profile_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:text="Profile photo(Change)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_3sdp"
            android:text="photo privacy" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_main_Image_photo_upload_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom_layout"
        android:layout_below="@+id/rl_top_layout"
        android:src="@color/background_tab_pressed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_layout"
        android:layout_margin="@dimen/_10sdp"
        android:alpha="0.5"
        android:background="#000000"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:text="1 photo"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom_layout"
        android:layout_margin="@dimen/_10sdp"
        android:alpha="0.5"
        android:background="#000000"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_10sdp"
        android:text="75% of users feel they need atleast 3 photos to send an expression of interest.. Upload more"
        android:textColor="@color/white" />
</RelativeLayout>