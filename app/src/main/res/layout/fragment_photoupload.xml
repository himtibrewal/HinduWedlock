<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ll_photo_upload_bottom_photo_upload_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_dark"
        android:paddingTop="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_gallery_photo_upload_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_strok_white_hollow"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/gallery_white" />

            <TextView
                android:id="@+id/tv_gallery_photo_upload_fragment"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_gallery_photo_upload_fragment"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Gallery"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gallery_photo_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_camera_photo_upload_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_strok_white_hollow"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/camera_white" />

            <TextView
                android:id="@+id/tv_camera_photo_upload_fragment"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_camera_photo_upload_fragment"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Camera"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_facebook_photo_upload_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circle_strok_white_hollow"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/gallery_white" />

            <TextView
                android:id="@+id/tv_facebook_photo_upload_fragment"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_facebook_photo_upload_fragment"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Facebook"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:text="Profile photo(Change)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_3sdp"
            android:text="photo privacy" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_main_Image_photo_upload_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_photo_upload_bottom_photo_upload_fragment"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_top_layout"
        android:src="@color/background_tab_pressed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top_layout"
        android:layout_margin="@dimen/_10sdp"
        android:alpha="0.5"
        android:background="#000000"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:text="1 photo"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_photo_upload_bottom_photo_upload_fragment"
        android:layout_margin="@dimen/_10sdp"
        android:alpha="0.5"
        android:background="#000000"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_10sdp"
        android:text="75 %  of  user  fell they need  atleat 3  photo to send an expression "
        android:textColor="@color/white" />
</RelativeLayout>