<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Complete your profile by filling details marked red"
        android:textSize="@dimen/_10sdp" />

    <LinearLayout style="@style/LinearLayout_Spinner" />


    <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
        android:id="@+id/ctv_about_my_career_career_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:heading="About My Career"
        custom:value="detail text" />

    <LinearLayout style="@style/LinearLayout_Spinner" />

    <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
        android:id="@+id/ctv_career_deatil_career_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:heading="Career Details"
        custom:value="detail text" />

    <LinearLayout style="@style/LinearLayout_Spinner" />

    <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
        android:id="@+id/ctv_future_plans_career_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:heading="Future Plans"
        custom:value="detail text" />

    <LinearLayout style="@style/LinearLayout_Spinner" />

</LinearLayout>