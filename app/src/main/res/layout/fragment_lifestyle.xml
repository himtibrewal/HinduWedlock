<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Complete your profile by filling details marked red"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_habits_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Habits"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_assert_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Assets"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_skills_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Skills"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_hobbies_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Hobbies"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_interests_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Interests"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_favourite_lifestyle_info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Favourite"
            custom:value="detail text" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

    </LinearLayout>

</ScrollView>