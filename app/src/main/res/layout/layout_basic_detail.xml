<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_full_name_login_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="65"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/title_full_name"
                    style="@style/TextView_up_style"
                    android:text="Full Name" />

                <EditText
                    android:id="@+id/et_full_name_value_basic_detail"
                    style="@style/TextView_style"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Show_to_all_login_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableRight="@drawable/settings_grey"
                android:gravity="center"
                android:paddingRight="@dimen/_10sdp"
                android:singleLine="true"
                android:text="Show to all"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout style="@style/LinearLayout_Spinner" />


        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_height_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="@string/height"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_country_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="@string/country"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_gender_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Gender"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/ctv_date_of_birth_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Date Of Birth"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_marital_status_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Marital Status"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.custom.CustomLayoutTitleValue
            android:id="@+id/layout_managed_by_basic_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Profile Managed By"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />
    </LinearLayout>
</ScrollView>
