<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
            android:id="@+id/ctv_father_is_parents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Father is"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
            android:id="@+id/ctv_mother_is_parents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Mother is"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />

        <com.colaborotech.thehinduwedlock.utility.CustomLayoutTitleValue
            android:id="@+id/ctvfamily_income_parents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:heading="Family Income"
            custom:value="@string/not_filled" />

        <LinearLayout style="@style/LinearLayout_Spinner" />


    </LinearLayout>
</ScrollView>

